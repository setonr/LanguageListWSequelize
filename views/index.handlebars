<h1 id="masthead">My Language To-Study List</h1>

<div class = "row">
<div class = "col-sm-4 column1">
<h2 class="headers">My List</h2>
<br>
<ul>
  {{#each Language}}
    {{#unless this.studied}}
    <li>
      <p>
        {{this.id}}. {{this.language}}

        <form method = "POST" action="/languages/update?_method=PUT" class="button-size">
          <input type="hidden" type="text" name="id" value={{this.id}}><br>
          <button class = "studiedBtn" type="submit">Studied it!</button>
        </form>
      </p>
    </li>
    {{/unless}}
  {{/each}}
</ul>
<br>

</div>

<div class="col-sm-4 column2">
<h2 class="headers">Add a Language</h2>
<br>
<form action="/languages/create" method="POST">
  <input type="text" class="form-control" name="language" value="" id="addLang">
  <button class="submit" type="submit">Save</button>
</form>
</div>

<div class="col-sm-4 column3">

<h2 class="headers">Languages I've Studied</h2>
<br>
<ul>
  {{#each Language}}
    {{#if this.studied}}
    <li>
      <p>
        {{this.id}}. {{this.language}}
      </p>
    </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
